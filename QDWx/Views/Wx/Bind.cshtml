@{
    ViewBag.Title = "Bind";
    Layout = "~/Views/Shared/_WxLayout.cshtml";
}
@section Script{

}
<input type="hidden" id="openid" value="@ViewBag.openid" />
<div class="hd">
    <h1 class="page_title">用户绑定</h1>
</div>
<div class="bd">
    <form action="Bind" method="post">
        <div class="weui_cells weui_cells_form">
            <div class="weui_cell">
                <div class="weui_cell_hd"><label class="weui_label">姓名</label></div>
                <div class="weui_cell_bd weui_cell_primary">
                    <input class="weui_input" type="number" name="username" placeholder="姓名">
                </div>
            </div>
            <div class="weui_cell">
                <div class="weui_cell_hd"><label class="weui_label">手机号</label></div>
                <div class="weui_cell_bd weui_cell_primary">
                    <input class="weui_input" type="number" name="phone" pattern="[0-9]*" placeholder="手机号">
                </div>
            </div>
        </div>
    </form>
    <div class="weui_btn_area">
        <a class="weui_btn weui_btn_primary" href="javascript:">提交</a>
    </div>
</div>