@{
    ViewBag.Title = "Scan";
    Layout = "~/Views/Shared/_WxLayout.cshtml";
}
@section Script{
    <script src="@Url.Content("~/Scripts/Scan_INC.js")"></script>
}
<input type="hidden" id="openid" value="@ViewBag.openid" />
<div class="hd">
    <h1 class="page_title">扫码签到</h1>
</div>
<div class="bd spacing">
    <a href="javascript:" class="weui_btn weui_btn_primary disabled" onclick="scan()" id="scanBtn">扫一扫</a>
</div>
<div class="weui_dialog_alert" id="dialog_ok" style="display: none;">
    <div class="weui_mask"></div>
    <div class="weui_dialog">
        <div class="weui_dialog_hd"><strong class="weui_dialog_title">消息</strong></div>
        <div class="weui_dialog_bd" id="info">弹窗内容，告知当前页面信息等</div>
        <div class="weui_dialog_ft">
            <a href="javascript:" onclick="close()" class="weui_btn_dialog primary">确定</a>
        </div>
    </div>
</div>